<p class="back-link"><%= link_to "â† Back", products_path %></p>

<section class="product">
  <% if @product.featured_image.attached? %>
    <%= image_tag @product.featured_image, class: "product-image" %>
  <% end %>

  <section class="product-info">
    <% cache @product do %>
      <h1><%= @product.name %></h1>
      <div class="product-description"><%= @product.description %></div>
    <% end %>

    <%= render "inventory", product: @product %>

    <div class="product-actions">
      <% if authenticated? %>
        <%= link_to "Edit", edit_product_path(@product), class: "button secondary" %>
        <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "button danger" %>
      <% end %>
    </div>
  </section>
</section>